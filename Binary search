def binary_search(array, element, start, end):
    if start > end:    # checking for problem in input
        return -1

    mid = (start + end) // 2
    if element == array[mid]:   # Finding middle of array and confirming it is/is not the element
        return mid

    if element < array[mid]:
        return binary_search_recursive(array, element, start, mid-1)    # recursively searching lower half of array
    else:
        return binary_search_recursive(array, element, mid+1, end)      # recursively searching upper half of array